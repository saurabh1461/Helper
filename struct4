#include <stdio.h>

union Temperature {
    float celsius;
    float fahrenheit;
};

int main() {
    union Temperature temp;
    char unit;

    printf("Enter temperature value: ");
    scanf("%f", &temp.celsius);
    printf("Enter temperature unit (C/F): ");
    scanf(" %c", &unit);

    if (unit == 'C' || unit == 'c') {
        temp.fahrenheit = (temp.celsius * 9/5) + 32;
        printf("%.2f C = %.2f F", temp.celsius, temp.fahrenheit);
    }
    else if (unit == 'F' || unit == 'f') {
        temp.celsius = (temp.fahrenheit - 32) * 5/9;
        printf("%.2f F = %.2f C", temp.fahrenheit, temp.celsius);
    }
    else {
        printf("Invalid unit!");
    }

    return 0;
}
